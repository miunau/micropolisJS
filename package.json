{
  "name": "micropolisJS-online",
  "version": "1.0.0",
  "description": "A port of the open-source simulator \"Micropolis\" to Javascript/HTML5 - online version",
  "repository": {
    "type": "git",
    "url": "https://github.com/miunau/micropolisJS.git"
  },
  "bugs": {
    "url": "https://github.com/miunau/micropolisJS/issues"
  },
  "scripts": {
    "dev": "svelte-kit dev --port 3044",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "prepare": "svelte-kit sync",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@types/jquery": "^3.5.14",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.1",
    "tslib": "^2.3.1",
    "typescript": "~4.6.2"
  },
  "type": "module",
  "dependencies": {
    "jquery": "^3.6.0"
  },
  "author": "Graeme McCutcheon (http://www.graememcc.co.uk)",
  "contributors": [
    {
      "name": "miunau",
      "email": "miunau+github@miunau.com",
      "url": "https://www.miunau.com"
    }
  ],
  "license": "GPL-3.0",
  "readmeFilename": "README.md"
}
